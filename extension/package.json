{
  "name": "codetographer",
  "displayName": "Codetographer",
  "description": "Interactive code flow visualization with navigable graphs",
  "version": "0.1.0",
  "publisher": "your-publisher-id",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kelvination/codetographer.git"
  },
  "homepage": "https://github.com/Kelvination/codetographer#readme",
  "bugs": {
    "url": "https://github.com/Kelvination/codetographer/issues"
  },
  "keywords": [
    "visualization",
    "code-graph",
    "architecture",
    "diagram",
    "flow"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codetographer.openAsText",
        "title": "Open as JSON",
        "category": "Codetographer"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codetographer.openAsText",
          "when": "activeCustomEditorId == codetographer.cgraphEditor"
        }
      ],
      "editor/title": [
        {
          "command": "codetographer.openAsText",
          "when": "activeCustomEditorId == codetographer.cgraphEditor",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "codetographer.cgraphEditor",
        "displayName": "Codetographer",
        "selector": [
          {
            "filenamePattern": "*.cgraph"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "cgraph",
        "aliases": ["Codetograph", "cgraph"],
        "extensions": [".cgraph"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/extension.ts --format cjs --out-dir dist --external vscode",
    "watch": "tsup src/extension.ts --format cjs --out-dir dist --external vscode --watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  }
}
