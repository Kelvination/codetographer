{
  "name": "codegrapher",
  "displayName": "CodeGrapher",
  "description": "Interactive code flow visualization with navigable graphs",
  "version": "0.1.0",
  "publisher": "codegrapher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegrapher.openAsText",
        "title": "Open as JSON",
        "category": "CodeGrapher"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codegrapher.openAsText",
          "when": "activeCustomEditorId == codegrapher.cgraphEditor"
        }
      ],
      "editor/title": [
        {
          "command": "codegrapher.openAsText",
          "when": "activeCustomEditorId == codegrapher.cgraphEditor",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "codegrapher.cgraphEditor",
        "displayName": "CodeGrapher",
        "selector": [
          {
            "filenamePattern": "*.cgraph"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "cgraph",
        "aliases": ["CodeGraph", "cgraph"],
        "extensions": [".cgraph"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/extension.ts --format cjs --out-dir dist --external vscode",
    "watch": "tsup src/extension.ts --format cjs --out-dir dist --external vscode --watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  }
}
